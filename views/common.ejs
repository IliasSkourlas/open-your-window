
<%- include("partials/header"); -%>

        <!-- hidden -->
        <div   id="hoverSpot"> </div>
        <!-- hidden -->
        <div class="rightMenu"></div>
        <!-- hidden -->   
        <div class="Time">1</div>
        
        <!-- iframes -->
        <div style="opacity: 0.92;" class="loop">   
            <% videoBox.forEach(function(i){  %>
            <div>
                <iframe  class="giveId" id="v1" src="<%= i.name %>"  width="560" height="315" frameborder="0" loading=”lazy” allowfullscreen scrolling="yes" ">
                </iframe>  
                <form action="/" class="position" id="1" method="post">
                    <input id="i1" class="inputId" name="postUrl" value="<%= i.name %>" autocomplete="off"></input>
                        <button type="submit" name="button" value="<%= i._id %>" class="buttonLink"></button> 
                        <input class="checkAutoplay" type="checkbox" name="buttonAutoplayMute" autocomplete="off"  ></input>
                </form>
            </div>
           <% }) %>   

        </div>
       
        <!-- left menu -->
        <div class="leftMenu">
            <div class="memories">
                <form action="/memory" method="post">
                    <button type="submit" name="memoryButton" value="weel0" class="memoryButtons"  >0</button>
                    <button type="submit" name="memoryButton" value="weel1" class="memoryButtons"  >1</button>
                    <button type="submit" name="memoryButton" value="weel2" class="memoryButtons"  >2</button>
                    <button type="submit" name="memoryButton" value="weel3" class="memoryButtons"  >3</button>
                </form>
                <form action="/copy" method="post">
                    <input class="checkbox" id="copyCheckbox" type="checkbox" name="copy" onchange="this.form.submit()" >copy</input>
                </form>
                <div class="background">
                    <form action="/backgroundVideo" method="post">
                        <button class="backgroundButton" id="backgroundVideoButton"  type="submit"  >Background</button>                 
                    </form>
                    <form action="/backgroundSound" method="post">
                        <button class="backgroundButton" id="backgroundSoundButton"  type="submit"  >Sound</button>
                    </form>
                </div>
            </div>
            <!-- sound only    test: z-index -100 & width= 0   mute = 0   play -->
        <iframe id="backgroundSound" src= "<%= backgroundSound  %>" width="560" height="315" frameborder="0" allowfullscreen ></iframe> 
        
        </div>

        <!-- background Video iframe -->
        <div class="backgroundIframe">
            <iframe id="backgroundVideo" src= "<%= backgroundVideo  %>" width="560" height="315" frameborder="0" loading=”lazy” allowfullscreen ></iframe> 
        </div>

        


<%- include("partials/footer"); -%>

